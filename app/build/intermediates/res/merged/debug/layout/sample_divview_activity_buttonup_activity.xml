<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/activity_button_up"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20"
        android:background="@drawable/lz_border_top_ff0000"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/activity_button_up_take"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:text="拍照"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/white"
            android:background="@drawable/lz_button_on"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"/>


        <Button
            android:id="@+id/activity_button_up_select"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:text="相册"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/white"
            android:background="@drawable/lz_button_on"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"/>


        <Button
            android:id="@+id/activity_button_up_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:text="取消"
            android:textSize="@dimen/text_size_30"
            android:textColor="@color/white"
            android:background="@drawable/lz_button_on"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_10"/>

    </LinearLayout>




</RelativeLayout>