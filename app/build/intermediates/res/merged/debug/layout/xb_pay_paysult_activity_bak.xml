<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/lz_common_head"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/topbar_height">

        <com.lazy.android.baseui.common.LZImageviewDiyRound
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_150"
            android:layout_marginTop="@dimen/px_60"
            android:layout_marginBottom="@dimen/px_50"
            android:layout_centerInParent="true"
            android:src="@drawable/xb_headimage"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共支付:"
                android:textSize="@dimen/text_size_28"
                android:textColor="@color/textcolor333"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_10"
                android:text="¥"
                android:textSize="@dimen/text_size_28"
                android:textColor="@color/textred"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14.0"
                android:layout_marginLeft="@dimen/px_10"
                android:textSize="@dimen/text_size_46"
                android:textColor="@color/textred"
                />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1件商品"
            android:layout_marginTop="@dimen/px_10"
            android:textColor="@color/textcolor333"
            android:textSize="@dimen/text_size_26"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px1"
            android:layout_marginTop="@dimen/px_40"
            android:background="@color/cutoff_line"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:src="@drawable/xb_payresult_success"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付成功"
                    android:layout_marginLeft="@dimen/px_20"
                    />
            </LinearLayout>

            <Button
                android:layout_width="@dimen/px_300"
                android:layout_height="@dimen/px_80"
                android:text="返回首页"
                android:layout_marginTop="@dimen/px_20"
                android:textSize="@dimen/text_size_32"
                android:textColor="@color/white"
                android:background="@drawable/xb_button_red"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:src="@drawable/xb_payresult_fail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付失败"
                    android:layout_marginLeft="@dimen/px_20"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_40"
                android:layout_marginRight="@dimen/px_40"
                android:textColor="@color/textcolor999"
                android:textSize="@dimen/text_size_26"
                android:text="因为账户余额不足或其他因素，付款失败，请重新支付，或者返回选择其他支付方式"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:layout_width="@dimen/px_240"
                    android:layout_height="@dimen/px_88"
                    android:text="暂不支付"

                    android:textSize="@dimen/text_size_32"
                    android:gravity="center"
                    android:textColor="@color/textred"
                    android:background="@drawable/xb_button_null"/>

                <Button
                    android:layout_width="@dimen/px_240"
                    android:layout_height="@dimen/px_88"
                    android:text="重新支付"
                    android:layout_marginLeft="@dimen/px_50"

                    android:textSize="@dimen/text_size_32"
                    android:textColor="@color/white"
                    android:background="@drawable/xb_button_red"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>