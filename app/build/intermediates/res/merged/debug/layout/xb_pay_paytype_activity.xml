<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/mainbg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/lz_common_head"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/topbar_height">

        <LinearLayout
            android:id="@+id/paytype_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_120"
            android:background="@drawable/lz_border_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/px_85"
                android:layout_height="@dimen/px_85"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:src="@drawable/xb_pay_alipay"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textSize="@dimen/text_size_32"
                    android:textColor="@color/textcolor333"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:text="推荐!支持支付宝支付"
                    android:textSize="@dimen/text_size_26"
                    android:textColor="@color/textcolor999"/>
                
            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_20"
                android:src="@drawable/xb_pay_arrowright"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paytype_wxpay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_120"
            android:background="@drawable/lz_border_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/px_85"
                android:layout_height="@dimen/px_85"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:src="@drawable/xb_pay_weixin"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信钱包"
                    android:textSize="@dimen/text_size_32"
                    android:textColor="@color/textcolor333"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_10"
                    android:text="推荐已安装微信客户端的用户使用"
                    android:textSize="@dimen/text_size_26"
                    android:textColor="@color/textcolor999"/>

            </LinearLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_20"
                android:src="@drawable/xb_pay_arrowright"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/paytype_nopay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:background="@color/white"
        android:gravity="right|center"
        android:paddingRight="@dimen/px_40"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/xb_pay_aroundbg"
            android:textSize="@dimen/text_size_26"
            android:textColor="@color/textorange"
            android:text="暂不支付"/>


    </LinearLayout>
</RelativeLayout>