<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/lz_common_head"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/topbar_height"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px_30"
            android:orientation="horizontal">

            <com.lazy.android.baseui.common.LZImageviewDiyRound
                android:layout_width="@dimen/px_150"
                android:layout_height="@dimen/px_150"
                android:layout_marginRight="@dimen/px_30"
                android:layout_centerInParent="true"
                android:src="@drawable/xb_headimage"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_30"
                android:textColor="@color/textcolor999"
                android:hint="请输入内容"
                android:gravity="top"
                android:background="@null"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginLeft="@dimen/px_20"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/line_color_b2b2b2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="相符程度"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/textcolor333"/>

                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/line_color_b2b2b2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="物流服务"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/textcolor333"/>

                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/line_color_b2b2b2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_100"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务态度"
                    android:textSize="@dimen/text_size_30"
                    android:textColor="@color/textcolor333"/>

                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
                <ImageView
                    android:layout_width="@dimen/px_45"
                    android:layout_height="@dimen/px_45"
                    android:layout_marginLeft="@dimen/px_10"
                    android:src="@drawable/xb_comment_foot_off"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px1"
                android:background="@color/line_color_b2b2b2"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_88"
            android:layout_marginTop="@dimen/px_88"
            >
            <Button
                android:layout_marginLeft="@dimen/px_30"
                android:layout_marginRight="@dimen/px_30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="发表"
                android:textSize="@dimen/text_size_36"
                android:textColor="@color/white"
                android:background="@drawable/xb_button_yellow"
                />

        </LinearLayout>


    </LinearLayout>





</RelativeLayout>