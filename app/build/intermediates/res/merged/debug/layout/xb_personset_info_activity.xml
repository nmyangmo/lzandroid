<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:background="@color/mainbg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_500"
        android:orientation="vertical"
        android:background="@drawable/xb_personset_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/topbar_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/persentinfo_back"
                android:layout_width="@dimen/px_90"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/px_25"
                    android:layout_height="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_20"
                    android:src="@drawable/lz_arrow_left"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/persentinfo_headimg"
                android:layout_width="@dimen/px_170"
                android:layout_height="@dimen/px_170"
                android:src="@drawable/xb_headimage"
                android:layout_gravity="center"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFFFF"/>

            <!--<ImageView-->
                <!--android:id="@+id/persentinfo__headimg"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--/>-->
            <TextView
                android:id="@+id/persentinfo_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="@dimen/text_size_36"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/px_30"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginBottom="@dimen/px_20"
            android:gravity="right">
            <TextView
                android:id="@+id/persentinfo_editbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_20"
                android:gravity="center"
                android:text="编辑资料"
                android:textSize="@dimen/text_size_28"
                android:textColor="@color/white"
                android:background="@drawable/xb_personset_edit"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/lz_common_line_dbdbdb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="账号:"
                android:textColor="@color/textcolor333"
                android:textSize="@dimen/text_size_32"/>

            <EditText
                android:id="@+id/persentinfo_telnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="18105332018"
                android:background="@null"

                android:editable="false"
                android:paddingRight="@dimen/px_30"
                android:textColor="@color/textcolor999"
                android:textSize="@dimen/text_size_32"/>
        </LinearLayout>
        <include layout="@layout/lz_common_line_dbdbdb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="昵称:"
                android:textColor="@color/textcolor333"
                android:textSize="@dimen/text_size_32"/>

            <EditText
                android:id="@+id/persentinfo_nicknamemain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:text="空"
                android:background="@null"
                android:paddingRight="@dimen/px_30"
                android:textColor="@color/textcolor999"
                android:textSize="@dimen/text_size_32"/>
        </LinearLayout>
        <include layout="@layout/lz_common_line_dbdbdb"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/lz_common_line_dbdbdb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="性别:"
                android:textColor="@color/textcolor333"
                android:textSize="@dimen/text_size_32"/>

            <EditText
                android:id="@+id/persentinfo_sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:editable="false"
                android:clickable="false"
                android:gravity="right|center_vertical"
                android:text="女"
                android:paddingRight="@dimen/px_30"
                android:textColor="@color/textcolor999"
                android:textSize="@dimen/text_size_32"/>
        </LinearLayout>
        <include layout="@layout/lz_common_line_dbdbdb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="城市:"
                android:textColor="@color/textcolor333"
                android:textSize="@dimen/text_size_32"/>

            <EditText
                android:id="@+id/persentinfo_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:background="@null"
                android:editable="false"
                android:text="未选"
                android:paddingRight="@dimen/px_30"
                android:textColor="@color/textcolor999"
                android:textSize="@dimen/text_size_32"/>
        </LinearLayout>
        <include layout="@layout/lz_common_line_dbdbdb"/>
    </LinearLayout>

    <Button
        android:id="@+id/persentinfo_savebutton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:text="保存"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30"
        android:textColor="@color/white"

        android:textSize="@dimen/text_size_36"
        android:background="@drawable/xb_button_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>