<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#eeeeee"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_border_bottom"
                android:text="单个对象的操作"
                android:layout_margin="10px"
                android:padding="30px"/>


            <TextView
                android:id="@+id/xutils_db_one_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="单个对象的添加"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>

            <TextView
                android:id="@+id/xutils_db_one_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="单个对象的删除"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>

            <TextView
                android:id="@+id/xutils_db_one_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="单个对象的更新"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>

            <TextView
                android:id="@+id/xutils_db_one_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="单个对象的查找"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dddddd"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_border_bottom"
                android:text="对象列表的操作"
                android:layout_margin="10px"
                android:padding="30px"/>

            <TextView
                android:id="@+id/xutils_db_list_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="对象列表的添加"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>


            <TextView
                android:id="@+id/xutils_db_list_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="对象列表的删除"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>


            <TextView
                android:id="@+id/xutils_db_list_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="对象列表的更新"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>


            <TextView
                android:id="@+id/xutils_db_list_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/lz_button_on"
                android:text="对象列表的查找"
                android:textColor="#ffffff"
                android:layout_margin="10px"
                android:padding="10px"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/xutils_db_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50px"
        android:gravity="center"/>

</LinearLayout>