<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/lz_common_head"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">



        <EditText
            android:id="@+id/baidumapsearch_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/px_20"
            android:text="星巴克"
            android:background="@drawable/lz_border_round"
            android:layout_margin="@dimen/px_10"
            />
        <TextView
            android:id="@+id/baidumapsearch_button"
            android:layout_width="@dimen/px_200"
            android:layout_height="wrap_content"
            android:background="@drawable/lz_button_on"
            android:text="检索"
            android:layout_margin="@dimen/px_10"
            android:textSize="@dimen/text_size_28"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/baidumapsearch_mapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />

    </LinearLayout>

</LinearLayout>