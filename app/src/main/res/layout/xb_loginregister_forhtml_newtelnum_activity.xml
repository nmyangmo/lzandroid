<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
              android:gravity="center"
              android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_47"
        android:text="绑定手机号"
        android:textSize="@dimen/text_size_32"
        android:textColor="@color/textcolor333"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:background="@drawable/xb_border_white_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30">

            <ImageView
                android:layout_width="@dimen/px_30"
                android:layout_height="@dimen/px_40"
                android:src="@drawable/xb_register_telnum"/>

            <EditText
                android:id="@+id/newnum_tel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_38"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="@color/hinttext"
                android:textSize="@dimen/text_size_32"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:background="@drawable/xb_border_white_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px_30"
            android:paddingRight="@dimen/px_30">

            <ImageView
                android:layout_width="@dimen/px_30"
                android:layout_height="@dimen/px_40"
                android:src="@drawable/xb_register_smscode"/>

            <EditText
                android:id="@+id/newnum_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_38"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="@color/hinttext"
                android:textSize="@dimen/text_size_32"/>
            
            <Button
                android:id="@+id/newnum_getcode"
                android:layout_width="@dimen/px_180"
                android:layout_height="@dimen/px_66"
                android:background="@drawable/xb_register_smscodebg"
                android:gravity="center"
                android:text="获取验证码"
                android:textSize="@dimen/text_size_26"
                android:textColor="@color/bluetext"
                />

        </LinearLayout>


        <Button
            android:id="@+id/newnum_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_86"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_marginTop="@dimen/px_40"
            android:clickable="true"
            android:background="@drawable/xb_button_bg"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_36"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老用户绑定手机还有特别惊喜哦！"
            android:layout_marginTop="@dimen/px_25"
            android:layout_marginBottom="@dimen/px_20"
            android:textColor="@color/textcolor999"/>


    </LinearLayout>


</LinearLayout>

