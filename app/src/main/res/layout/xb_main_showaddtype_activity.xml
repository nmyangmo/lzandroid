<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="#70000000">



    <LinearLayout
        android:id="@+id/movieclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/px_150"
                android:layout_height="@dimen/px_150"
                android:src="@drawable/xb_main_addmovie"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频"
                android:layout_marginTop="@dimen/px_26"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addphotoclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/px_150"
                android:layout_height="@dimen/px_150"
                android:src="@drawable/xb_main_addphoto"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:layout_marginTop="@dimen/px_26"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addphotosclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/px_150"
                android:layout_height="@dimen/px_150"
                android:src="@drawable/xb_main_addphotos"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相册"
                android:layout_marginTop="@dimen/px_26"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_36"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>